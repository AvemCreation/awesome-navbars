<div class="navbar-lewagon">
  <%= link_to root_path do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png", class: "brand" %>
  <% end %>

  <!-- displayed on laptops -->
  <div class="navbar-lewagon-actions d-none d-sm-flex">
    <% if user_signed_in? %>
      <%= link_to "Browse flats", "#", class: "navbar-lewagon-link" %>
      <div class="badge-container">
        <%= link_to "#", class: "navbar-lewagon-link" do %>
          Messages <span class="badge badge-pill badge-secondary text-white">5</span>
        <% end %>
      </div>
      <div class="dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar dropdown-toggle", id: "dropdownMenuButton", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "#", class: "dropdown-item" do %>
              <i class="fas fa-user"></i> Account
            <% end %>
            <%= link_to "#", class: "dropdown-item" do %>
              <i class="fas fa-cogs"></i> Settings
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <i class="fas fa-sign-out-alt"></i> Log out
            <% end %>
          </div>
       </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Login", new_user_session_path, class: "navbar-lewagon-link" %>
    <% end %>
  </div>

  <!-- displayed on phone / tablet -->
  <div class="navbar-lewagon-actions d-block d-sm-none">
    <div class="dropdown">
      <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <% if user_signed_in? %>
          <!-- links displayed for logged in user -->
          <%= link_to "#", class: "dropdown-item" do %>
            <i class="fas fa-home"></i> Browse flats
          <% end %>
          <%= link_to "#", class: "dropdown-item" do %>
            <i class="fas fa-comments"></i> Messages <span class="badge badge-pill badge-secondary text-white">5</span>
          <% end %>
          <%= link_to "#", class: "dropdown-item" do %>
            <i class="fas fa-user"></i> Account
          <% end %>
          <%= link_to "#", class: "dropdown-item" do %>
            <i class="fas fa-cogs"></i> Settings
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "dropdown-item" do %>
            <i class="fas fa-sign-in-alt"></i> Login
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
